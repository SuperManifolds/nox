{{! The 'line types' folder needs to be copied to a custom style to modify this file. }}

<div 	ltype="{{lineType}}" 
		command="{{rawCommand}}"
		highlight="{{highlightAttributeRepresentation}}" 
		class="line {{lineClassAttributeRepresentation}}" 
		id="line-{{lineNumber}}"
		time="{{lineRenderTime}}"
        encrypted="{{isEncrypted}}">
		
{{#isRemoteMessage}}
	<p>
{{^isRemoteMessage}}
	<p ltype="{{nicknameType}}" type="{{nicknameType}}">
{{/isRemoteMessage}}

		<span class="time">{{formattedTimestamp}} </span>
		
{{#isEncrypted}}
	{{{encryptedMessageLockTemplate}}}
{{/isEncrypted}}

		<span class="message" ltype="{{lineType}}" type="{{lineType}}">
			<span class="sender"
				onclick="Textual.nicknameSingleClicked()"
				ondblclick="Textual.nicknameDoubleClicked()"	
				oncontextmenu="Textual.openStandardNicknameContextualMenu()" 
				ltype="{{nicknameType}}" type="{{nicknameType}}"
				nickname="{{nickname}}" 
				{{#nicknameColorHashingEnabled}} 
					colornumber="{{nicknameColorNumber}}"
				{{/nicknameColorHashingEnabled}}>{{formattedNickname}}</span>
					{{{formattedMessage}}}
					
					{{#inlineMediaAvailable}}
						{{#inlineMediaArray}}
							<a href="{{{anchorLink}}}" onclick="return Textual.toggleInlineImage('{{anchorInlineImageUniqueID}}')"><img src="{{{imageURL}}}" class="inlineimage" id="inlineImage-{{anchorInlineImageUniqueID}}" style="display: none; max-width: {{preferredMaximumWidth}}px;" title="Hide image by shift clicking." /></a>
						{{/inlineMediaArray}}
					{{/inlineMediaAvailable}}
		</span>
	</p>
</div>
